#!/usr/bin/env sh
set -eu

# Create session only if missing
if ! tmux has-session -t work 2>/dev/null; then
  tmux new -d -s work

  # Build windows only on first creation
  tmux new-window -n mail -t work:1
  tmux send-keys -t work:mail 'neomutt' C-m

  tmux split-window -v -t work:mail
  tmux send-keys -t work:mail "${EDITOR:-hx} ~/Documents/todo.md" C-m

  tmux select-layout -t mail main-vertical
fi

exec tmux attach -t work

