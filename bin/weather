#!/usr/bin/env bash

set -eEu -o pipefail

# Cheddington
LONGLAT="51.847875,-0.664398"

# New York
# LONGLAT="40.758896,-73.985130"

DATA=`curl -s "https://api.darksky.net/forecast/17b1e8cae7b68e290659b438557def7e/$LONGLAT?exclude=minutely,hourly,daily,alerts,flags&units=si"`
echo $DATA
TEMP=`echo $DATA | jq -r '.currently.temperature'`
ICON=`echo $DATA | jq -r '.currently.icon'`
FORMATTEMP=`printf "%.0f\n" "$TEMP"`
ICONSYMBOL=""

# clear-day, clear-night, rain, snow, sleet, wind, fog, cloudy, partly-cloudy-day, or partly-cloudy-night.
case "$ICON" in
  "clear-day") ICONSYMBOL="ğŸŒ£ ";;
  "clear-night") ICONSYMBOL="ğŸŒœ";;
  "rain") ICONSYMBOL="â˜”";;
  "snow") ICONSYMBOL="â›‡ ";;
  "sleet") ICONSYMBOL="ğŸŒ£ ";;
  "wind") ICONSYMBOL="ğŸŒ¬";;
  "fog") ICONSYMBOL="ğŸŒ«";;
  "cloudy") ICONSYMBOL="â˜ ";;
  "partly-cloudy-day") ICONSYMBOL="ğŸŒ¥";;
  "partly-cloudy-night") ICONSYMBOL="ğŸŒ¥";;
esac


echo "$ICONSYMBOL $FORMATTEMPÂ°C"


