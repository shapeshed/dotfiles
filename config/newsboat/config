unbind-key j
unbind-key k
bind-key j down
bind-key k up
bind-key ^D pagedown
bind-key ^U pageup
bind-key g home
bind-key G end
bind-key h quit

articlelist-format  "%4i %f %D   %?T?|%-17T|  ?%t"
notify-format       "%d new articles (%n unread articles, %f unread feeds)"
notify-program      ~/.local/bin/newsboat-notify
notify-always       yes

browser             $BROWSER
